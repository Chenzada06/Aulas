#include <stdio.h>

#include <stdlib.h>

#define TAM 10

void push (int pilha[], int *max, int valor){

    if (*max == TAM - 1){
        printf("ERRO: A Pilha está cheia!\n ");
    }

    else {

        (*max)++;

        pilha[*max] = valor;

        printf("O valor %d foi inserido na pilha\n", pilha[*max]);

    }
}

void pop (int pilha[], int *max){

    if (*max == -1){
        printf("ERRO: A Pilha está vazia!\n ");
    }

    else {

        printf("O valor %d foi removido da pilha\n", pilha[*max]);

        (*max)--;
    }
}

void imprimir (int pilha[], int *max){

    if (*max == -1){
        printf("ERRO: A Pilha está vazia!\n");
    }
    else {
        printf("Os valores da pilha são:\n");

        for (int i = *max; i >= 0; i--)
        {
            printf("%d\n", pilha[i]);   
        }
        
    }
}

int main(){

    int pilha[TAM], max = -1, valor, opcao;

    do {
        printf("*** MENU DE OPÇÕES ***\n");
        printf("Escolha uma opção:\n");
        printf("1 - Inserir valor\n");
        printf("2 - Remover valor\n");
        printf("3 - Imprimir valores\n");
        printf("9 - Sair\n");

        scanf("%d", &opcao);

        switch (opcao){
            case 1:
                system("cls");
                    printf("Informe o valor para ser inserido:\n");
                        scanf("%d", &valor);
                            push(pilha, &max, valor);
                break;
            case 2:
                    system("cls");
                        pop(pilha, &max);
                break;
            case 3:
                    system("cls");
                    imprimir(pilha, &max);
                break;
            case 9:
                    system("cls");
                        printf("Saindo...\n");
                break;
            default:
                    system("cls");
                        printf("Opção inválida!\n");
                break;
        }
    } while (opcao != 9);

    return 0;
}